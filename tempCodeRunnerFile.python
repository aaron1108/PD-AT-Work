def find_last_person(n):
    # 建立一個包含 n 個人的列表，以編號 1 到 n 表示每個人
    people = list(range(1, n + 1))

    index = 0  # 初始化索引值為 0

    while len(people) > 1:
        # 模擬數到第 4 個人，即將該人移除
        index = (index + 3) % len(people)
        people.pop(index)

    return people[0]  # 返回最後剩下的人

# 測試程式碼
n = 14  # 假設有 10 個人
last_person = find_last_person(n)
print(f"最後剩下的人是第 {last_person} 位")